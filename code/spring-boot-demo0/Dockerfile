FROM openjdk:8-jdk-alpine
RUN mkdir -p /usr/src/app
COPY target/spring-boot-demo0-0.0.1-SNAPSHOT.jar /usr/src/app
WORKDIR /usr/src/app
RUN mkdir -p /usr/src/app/config
# all dependencies and the builded jar are copied to a folder called "maven" by the fabric8 plugin
CMD ["java", "-jar", "spring-boot-demo0-0.0.1-SNAPSHOT.jar","-cp","/usr/src/app/config"]
